<div class="row justify-content-center">
  <div class="p-3 shadow col-sm-4 col-sm-offset-4">
    <h3 class="text-center">Sign up as aide</h3>
    <div class="m-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group mb-3">
        <%= f.text_field :name, placeholder: 'Name', class: 'form-control', required: true %>
      </div>

      <div class="form-group mb-3">
        <%= f.email_field :email, placeholder: 'Email address', autofocus: false, class: 'form-control', required: true %>
      </div>

      <div class="form-group mb-3">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control', required: true %>
      </div>

      <div class="form-group mb-3">
        <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', autocomplete: "off", class: 'form-control', required: true %>
      </div>

      <div class="form-group mb-3">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div class="mt-5 row justify-content-center">
  <div class="p-3 shadow col-sm-4 col-sm-offset-4">
    <%= link_to 'Sign up as client', new_client_registration_path %>
  </div>
</div>
