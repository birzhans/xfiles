<%= form_tag aides_path, :method => 'get' do %>
  <div class="row mb-4">
    <div class="col-4">
      Select city
    </div>

    <div class="col-8">
      <%= select_tag(
        :city_id,
        options_for_select(['All'] + City.order(:name).pluck(:name, :id),
        :selected => @option_city),
        class: "form-control custom-select"
        )
      %>
    </div>
  </div><hr>

   <div class="row mb-4">
     <div class="col-6">
       Select category
     </div>

     <div class="col-6">
       <%= select_tag(
         :category_id,
         options_for_select(['All'] + Category.order(:name).pluck(:name, :id),
         :selected => @option_category),
         class: "form-control custom-select"
         )
       %>
     </div>
     <div class="m-1">
       <input type="submit" name="" value="Filter" class="btn btn-primary">
     </div>
   </div><hr>
  <% end %>

 <div class="row m-4">
   <%= link_to 'Reset', aides_path, class: 'btn btn-secondary' %>
 </div>
