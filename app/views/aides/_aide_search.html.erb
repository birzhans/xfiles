<%= form_tag aides_path, :method => 'get' do %>
  <div class="row mb-4">
    <div class="col-4">
      City
    </div>

    <div class="col-8">
      <%= select_tag(
        :city,
        options_for_select(
          City.order(:name).pluck(:name, :id),
          selected: @city_option
        ),
        include_blank: true,
        class: "form-control custom-select"
        )
      %>
    </div>
  </div><hr>

   <div class="row mb-4">
     <div class="col-6">
       Category
     </div>

     <div class="col-6">
       <%= select_tag(
         :category,
         options_for_select(
          Category.order(:name).pluck(:name, :id),
          selected: @category_option
         ),
         include_blank: true,
         class: "form-control custom-select"
         )
       %>
     </div>
     <div class="m-1">
       <input type="submit" name="" value="Filter" class="btn btn-primary">
     </div>
   </div><hr>
  <% end %>

 <div class="row m-4">
   <%= link_to 'Reset', aides_path, class: 'btn btn-secondary' %>
 </div>
