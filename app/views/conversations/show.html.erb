<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.6.8-fix/jquery.nicescroll.min.js"></script>

<div class="container">
  <div class="content container-fluid bootstrap snippets bootdey">
    <div class="row row-broken">
      <div class="mt-3 col-sm-3 col-xs-12">
        <div class="col-inside-lg decor-default chat shadow " style="overflow: hidden; outline: none;" tabindex="5000">
          <div class="chat-users">
            <h6>Conversations</h6>
              <%= render @conversations %>
          </div>
        </div>
      </div>
      <div class="mt-3 col-sm-9 col-xs-12 chat" style="overflow: hidden; outline: none;" tabindex="5001">
        <div class="col-inside-lg decor-default shadow">
          <div class="chat-body">
            <h6>
              Chatting with
              <%= link_to @conversation.with(current_user).name, aide_path(@conversation.with(current_user)) %>
            </h6>
            <div id="messages">
              <%= render @conversation.messages %>
            </div>

            <div class="answer-add">
              <%= form_for @message do |f| %>
                <%= hidden_field_tag 'conversation_id', @conversation.id %>
                <div class="row">
                  <div class="col-10">
                    <%= f.text_field :body, placeholder: 'Message..', class: 'formc-control' %>
                  </div>

                  <div class="col-2 bg-primary">
                    <%= f.submit 'Send', data: { disable_with: false } %>
                  </div>
                </div>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="channel_conversation_id" data_conversation_id="<%= @conversation.id %>"></div>
<div id="channel_user_id" data_user_id="<%= @current_user.id %>"></div>
