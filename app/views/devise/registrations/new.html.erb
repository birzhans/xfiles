<div class="row justify-content-center">
  <div class="col-sm-4 col-sm-offset-4">

    <h1 class="text-center">Sign Up</h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: false, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
      </div><hr>

      <div class="form-group m-2">
        <h4>I want to be</h4>
        <div class="row">
          <div class="col-3">
            <input type="radio" id="client" name="role" value="client">
            <label for="client" class="m-2">Client</label>
          </div>
          <div class="col-3">
            <input type="radio" id="aide" name="role" value="aide">
            <label for="aide" class="m-2">Aide</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "m-2 btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
