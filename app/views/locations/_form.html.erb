<%= form_with model: location, local: true do |f| %>
  <%= render 'shared/errors', resource: @test %>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.collection_select :city_id,
                            City.all,
                            :id,
                            :name,
                            prompt: 'Select city',
                            class: "form-control"  %>
  </div>

  <div class="form-group col-4">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Add location", class: "m-2 btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>
