<div class="row mb-3">
  <div class="col-6">
    <%= link_to location.city.name, aides_path(city_id: location.city.id) %><br>
    <%= location.address %>
  </div>

  <div class="col-6">
    <% if @current_user == location.userable %>
      <%= link_to 'Edit', edit_location_path(location), class: 'btn btn-info' %>
      <%= link_to 'Delete', location_path(location), class: 'btn btn-info', method: :delete %>
    <% end %>
  </div>
</div>
