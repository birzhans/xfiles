<header>
    <div class="px-3 py-2 bg-dark text-white">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <a href="/" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
            <h3>
              Xfiles
            </h3>
          </a>

          <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
            <li>
              <a href="/helpers" class="nav-link text-white">
                <div class="">
                  <%= fa_stacked_icon "dashboard", base: "square-o" %>
                </div>
                Helpers
              </a>
            </li>
            <li>
              <a href="#" class="nav-link text-white">
                <div class="">
                  <%= fa_stacked_icon "user", base: "square-o" %>
                </div>
                Orders
              </a>
            </li>
            <li>
              <a href="#" class="nav-link text-white">
                <div class="">
                  <%= fa_stacked_icon "bell", base: "square-o" %>
                </div>
                Products
              </a>
            </li>
            <li>
              <a href="#" class="nav-link text-white">
                <div class="">
                  <%= fa_stacked_icon "bullseye", base: "square-o" %>
                </div>
                Customers
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="px-3 py-2 border-bottom mb-3">
      <div class="container d-flex flex-wrap justify-content-center">
        <form class="col-12 col-lg-auto mb-2 mb-lg-0 me-lg-auto">
          <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
        </form>

        <div class="text-end">
          <% if client_signed_in? %>
            <%= link_to 'Profile', profile_clients_path, class: 'btn btn-primary' %>
            <%= link_to 'Logout', destroy_client_session_path, method: :delete, class: 'btn btn-light text-dark me-2' %>
          <% elsif helper_signed_in? %>
            <%= link_to 'Profile', profile_helpers_path, class: 'btn btn-primary' %>
            <%= link_to 'Logout', destroy_helper_session_path, method: :delete, class: 'btn btn-light text-dark me-2' %>
          <% else %>
            <%= link_to 'Login', new_client_session_path, class: 'btn btn-light text-dark me-2' %>
            <%= link_to 'Sign-up', new_client_registration_path, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </header>
